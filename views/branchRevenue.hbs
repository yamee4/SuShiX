<body>
    <div class="container">
        <h1>{{name}}</h1>
        <form id="revenueForm" method="POST" action="/branchRevenue">
            <div>
                <label for="branchID">Branch ID:</label>
                <input type="number" id="branchID" name="branchID" required>
            </div>
            <div>
                <label for="startDate">Start Date:</label>
                <input type="date" id="startDate" name="startDate" required>
            </div>
            <div>
                <label for="endDate">End Date:</label>
                <input type="date" id="endDate" name="endDate" required>
            </div>
            <button type="submit">Get Revenue</button>
        </form>

        {{#if results}}
            <h2>Revenue Results for Branch ID: {{branchID}}</h2>
            <table>
                <thead>
                    <tr>
                        <th>Total Revenue:  </th> 
                        <th class ="right-align"> {{results.[0].[Tổng doanh thu trong khoảng thời gian đã chọn]}}</th>
                    </tr>
                </thead>
            </table>
        {{/if}}

        {{#if error}}
            <div class="error">{{error}}</div>
        {{/if}}
    </div>
</body>