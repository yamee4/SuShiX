<section>
    <form action="/bookTable" method="POST">
        <div class="dropdown">
            <button
                class="btn btn-secondary dropdown-toggle"
                type="button"
                id="triggerId"
                data-bs-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="false"
            >
                BRANCH
            </button>
            <div class="dropdown-menu" aria-labelledby="triggerId">
                {{#each branches}}
                <a class="dropdown-item" href="#">{{BranchName}}</a>
                {{/each}}
            </div>
        </div>

        <div>
            <label for="Area">Area:</label>
            <input type="text" id="Area" name="Area" maxlength="30" required>
        </div>

        <div>
            <label for="NumberofCustomer">Number of Customers:</label>
            <input type="number" id="NumberofCustomer" name="NumberofCustomer" required>
        </div>
        <div>
            <label for="PreOrderNote">Pre-Order Note:</label>
            <textarea id="PreOrderNote" name="PreOrderNote" maxlength="100"></textarea>
        </div>
        <div>
            <button type="submit">Sumit</button>
        </div>
    </form>
</section>
