<body>
    <div class="container">
        <h1>{{name}}</h1>

        <form id="feedbackForm" method="POST" action="/feedback">
            <div>
                <label for="TicketID">Ticket ID</label>
                <input type="t" id="TicketID" name="TicketID" required />
            </div>

            <div>
                <label for="FeedbackService">Feedback Service</label>
                <input
                    type="number"
                    id="FeedbackService"
                    name="Feedback Service"
                    max="10"
                    min="0"
                    required
                />
            </div>

            <div>
                <label for="Feedback Food Quality">Feedback Food Quality</label>
                <input
                    type="number"
                    id="FeedbackFoodQuality"
                    name="Feedback Food Quality"
                    max="10"
                    min="0"
                    required
                />
            </div>

            <div>
                <label for="FeedbackPrice">Feedback Price</label>
                <input
                    type="number"
                    id="FeedbackPrice"
                    name="Feedback Price"
                    max="10"
                    min="0"
                    required
                />
            </div>

            <div>
                <label for="FeedbackLocation">Feedback Location</label>
                <input
                    type="number"
                    id="FeedbackLocation"
                    name="Feedback Location"
                    max="10"
                    min="0"
                    required
                />
            </div>

            <div>
                <label for="FeedbackNote">Feedback Note</label>
                <input type="t" id="FeedbackNote" name="FeedbackNote" />
            </div>

            <button type="submit">Submit</button>
        </form>
    </div>

    <div class="notification-container">
        {{#if results}}
            <div class="alert alert-success" role="alert">
                Add feedback for
                <strong>{{TicketID}}</strong>
                successfully
            </div>
        {{/if}}

        {{#if error}}
            <div class="alert alert-danger" role="alert">
                <strong>Error:</strong>
                {{error}}
            </div>
        {{/if}}
    </div>

</body>