            <div class="col-12 col-md-4">
                <div class="card border-0">
                    <img class="card-img-top img-fluid" src="/Menu/7.jpg" alt="Title" />
                    <div class="card-body">
                        <h4 class="card-title">Tamagoyaki</h4>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="card border-0">
                    <img class="card-img-top img-fluid" src="/Menu/8.jpg" alt="Title" />
                    <div class="card-body">
                        <h4 class="card-title">Udon</h4>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="card border-0">
                    <img class="card-img-top img-fluid" src="/Menu/9.jpg" alt="Title" />
                    <div class="card-body">
                        <h4 class="card-title">Cucumber roll</h4>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="py-3">
        <div class="container text-center">
            <h2>OUR TEAM</h2>
            <p>Meet our team of experienced chefs</p>
        </div>

        <div class="row">
            <div class="col-12 col-md-3">
                <div class="card border-0">
                    <img class="card-img-top img-fluid" src="qhuy.png" alt="Title" />
                    <div class="card-body text-center">
