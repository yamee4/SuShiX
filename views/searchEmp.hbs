<body>
    <div class="container">
        <h1>{{name}}</h1>
        
        <form id="searchEmpForm" method="POST" action="/searchEmp">
            <div>
                <label for="BranchID">Branch ID:</label>
                <input type="number" id="BranchID" name="BranchID" required>
            </div>
            <div>
                <label for="EmpID">Employee ID:</label>
                <input type="text" id="EmpID" name="EmpID" required maxlength="5">
            </div>
            <button type="submit">Search Employee</button>
        </form>

        {{#if error}}
            <div class="error">{{error}}</div>
        {{/if}}

        {{#if results}}
            <h2>Search Results</h2>
            <table>
                <thead>
                    <tr>
                        <th>Employee ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Birth Date</th>
                        <th>Gender</th>
                        <th>Salary</th>
                        <th>Branch Manager</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{results.[0].EmpID}}</td>
                        <td>{{results.[0].EmpFirstName}}</td>
                        <td>{{results.[0].EmpLastName}}</td>
                        <td>{{formatDate results.[0].EmpBirthDate}}</td>
                        <td>{{results.[0].EmpGender}}</td>
                        <td>{{results.[0].Salary}}</td>
                        <td>{{results.[0].BranchManager}}</td>
                    </tr>
                </tbody>
            </table>
        {{/if}}
    </div>
</body